@model bloGrid.Models.Account

<div id="LoginBar">
    @{
        <a href="/Home" id="Home">Home</a>
        if (ViewBag.Logged == true)
        {
            
            <a href="/Home/Delete" id="Restart">Delete all</a>
        }
        else
        {
            <a href="#" id="Edit">Edit</a>
        }
     }

    <div id="login">
        @using (Html.BeginForm("Edit", "Home", FormMethod.Post))
        {
            @Html.Label("Username: ")<br/>
            @Html.TextBoxFor(model => model.Name)<br/>
            @Html.Label("Password: ") <br/>
            @Html.PasswordFor(model => model.Password)<br/>
            <input type="submit" value="Login">
        }
     </div>
</div>
